{
  "name": "chrome-extension-vue3",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run build && npm-run-all --parallel vite:watch content:watch",
    "vite:watch": "vite build --watch",
    "content:watch": "vite build --config vite.content.config.js --watch",
    "build": "vite build && vite build --config vite.content.config.js",
    "build:content": "vite build --config vite.content.config.js"
  },
  "dependencies": {
    "element-plus": "^2.4.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "cross-env": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "type": "module"
}
